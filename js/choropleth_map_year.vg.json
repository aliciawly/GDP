{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
 
  "background": "rgb(250, 245, 229)",
  "width": 1300,
  "height": 500,
  "projection": {
    "type": "mercator",
    "scale": 3500,
    "center": [109, 4]
  },
  "data": {
    "url": "https://raw.githubusercontent.com/aliciawly/map/refs/heads/main/js/ne_1.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aliciawly/map/refs/heads/main/js/ne_1.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/aliciawly/MalaysiaEconomicGrowth/refs/heads/main/data/GDP_year.csv"
            },
            "key": "State",
            "fields": ["State", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023"]
          }
        },
        {
          "calculate": "toNumber(datum[Year_selection])", 
          "as": "GDP per Capita"
        },
        {
          "calculate": "Year_selection",
          "as": "Selected Year"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "GDP per Capita",
          "title": "GDP per Capita (in MYR)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.01, 0.05, 0.10, 0.25, 0.3],
            "range": ["#b1ebb1", "#82cec2", "#51b2cd", "#288abd", "#174b87"]
          },
          "legend": {
            "titleFontSize": 12,
            "labelFontSize": 12,
            "symbolSize": 200,
            "titleFont": "Source Sans Pro, sans-serif",
        "labelFont": "Source Sans Pro, sans-serif"
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "GDP per Capita", "type": "quantitative", "title": "GDP per Capita", "format": ".2f"},
          {"field": "Selected Year", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "fontSize": 12,
        "font": "Source Sans Pro, sans-serif",
        "fill": "black",
         "fontWeight": "bold"
      },
      "encoding": {
        "text": {"field": "properties.name"},
        "longitude": {"field": "properties.longitude", "type": "quantitative"},
        "latitude": {"field": "properties.latitude", "type": "quantitative"}
      }
    }
  ]
}
