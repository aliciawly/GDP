{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 500,
  "background": "rgb(250, 245, 229)",
  "data": {
    "url": "https://raw.githubusercontent.com/aliciawly/map/refs/heads/main/data/EconomicActivity.csv"
  },
  "params": [
    {
      "name": "Quarter_selection",
      "value": "2024Q1",
      "bind": {
        "input": "select",
        "options": ["2024Q1", "2024Q2"],
        "name": "Select Quarter: "
      }
    }
  ],
  "transform": [
    {
      "calculate": "datum[Quarter_selection]", 
      "as": "percentage"
    },
    {
      "calculate": "datum.percentage + '%'", 
      "as": "percentageWithSymbol"
    },
    {
      "calculate": "'increased from ' + datum['2024Q1'] + '% to ' + datum['2024Q2'] + '%'",
      "as": "changeText"
    }
  ],
  "encoding": {
    "theta": {
      "field": "percentage",
      "type": "quantitative",
      "stack": true,
      "title": "Percentage",
      "sort": "descending"
    },
    "color": {
      "field": "Kind of Economic Activity",
      "title": "Economic Activity Type",
      "type": "nominal",
      "scale": {
        "range": [
          "#8da0cb",
          "#fc8d62",
          "#a6d854",
          "#66c2a5",
          "#e5c494",
          "#b3b3b3"
        ]
      },
      "legend": {
        "titleFont": "Source Sans Pro, sans-serif",
        "titleFontSize": 12,
        "labelFont": "Source Sans Pro, sans-serif",
        "labelFontSize": 12,
        "symbolSize": 200     
      }
    },
    "tooltip": [
      {"field": "Kind of Economic Activity", "type": "nominal", "title": "Activity Type"},
      {"field": "percentageWithSymbol", "type": "nominal", "title": "Percentage"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 180,
        "outerRadius": 110,
        "stroke": "white",
        "strokeWidth": 2,
        "cursor": "pointer"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "outerRadius": 205,
        "fontSize": 14,
        "font": "Source Sans Pro, sans-serif"
      },
      "encoding": {
        "text": {"field": "percentageWithSymbol", "type": "nominal"}
      }
    },
    {
      "transform": [{"filter": "datum['Kind of Economic Activity'] == 'Construction'"}],
      "mark": {
        "type": "text",
        "align": "left",
        "x": 10,
        "y": 450,
        "fontSize": 15,
        "font": "Source Sans Pro, sans-serif"
      },
      "encoding": {
        "text": {"field": "Kind of Economic Activity", "type": "nominal"},
        "color": {"field": "Kind of Economic Activity", "type": "nominal"}
      }
    },
    {
      "transform": [{"filter": "datum['Kind of Economic Activity'] == 'Construction'"}],
      "mark": {
        "type": "text",
        "align": "left",
        "x": 10,
        "y": 465,
        "fontSize": 15,
        "font": "Source Sans Pro, sans-serif"
      },
      "encoding": {
        "text": {"field": "changeText", "type": "nominal"}
      }
    }
  ],
  "config": {
    "title": {
      "font": "Source Sans Pro, sans-serif",
      "fontSize": 16
    },
    "axis": {
      "labelFont": "Source Sans Pro, sans-serif",
      "titleFont": "Source Sans Pro, sans-serif"
    },
    "header": {
      "labelFont": "Source Sans Pro, sans-serif",
      "titleFont": "Source Sans Pro, sans-serif"
    }
  }
}